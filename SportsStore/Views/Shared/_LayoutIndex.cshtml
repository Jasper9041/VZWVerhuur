<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SportsStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VZW Verhuur", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewBag.Active == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                   
                   
                    <li class="@(ViewBag.Active == "Store" ? "active" : "")">@Html.ActionLink("Catalogus", "Index", "Store")</li>
                    <li class="@(ViewBag.Active == "Cart" ? "active" : "")">@Html.ActionLink("Aanvraagenvelop", "Index", "Cart")</li>
                    <li class="@(ViewBag.Active == "About" ? "active" : "")">@Html.ActionLink("Info", "About", "Home")</li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="@(ViewBag.Active == "Product" ? "active" : "")">@Html.ActionLink("Catalogusbeheer", "Index", "Product")</li>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <li class="@(ViewBag.Active == "Customer" ? "active" : "")">@Html.ActionLink("Gebruikersbeheer", "Index", "Customer")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger">@TempData["Message"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success">@TempData["Info"]</div>
    }
    @RenderBody()
        @*<hr class="col-md-12"/>
        <footer class="col-md-12">
            <p>&copy; @DateTime.Now.Year - VZW 152e FOS De Kangoeroes</p>
        </footer>*@</div>

  

@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
